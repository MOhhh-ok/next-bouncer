{
  "name": "next-bouncer",
  "version": "0.1.0",
  "description": "Type-safe validation library for Next.js Server Actions with adaptor pattern",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./validations": {
      "import": "./dist/validations/index.js",
      "types": "./dist/validations/index.d.ts"
    },
    "./validations/zod": {
      "import": "./dist/validations/zod.js",
      "types": "./dist/validations/zod.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "bun build ./index.ts --outdir ./dist --target node --format esm && bun run build:types",
    "build:types": "tsc --project ./tsconfig.json",
    "prepublishOnly": "bun run build"
  },
  "keywords": [
    "nextjs",
    "next",
    "server-actions",
    "validation",
    "type-safe",
    "typescript",
    "react",
    "zod",
    "adaptor"
  ],
  "peerDependencies": {
    "next": ">=14.0.0",
    "react": ">=18.0.0",
    "zod": ">=3.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.6",
    "@types/node": "^25.0.9",
    "typescript": "^5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mohhh-ok/next-bouncer.git"
  },
  "license": "MIT",
  "author": "Your Name",
  "engines": {
    "node": ">=18.0.0"
  }
}
