{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "composite": false,
    "incremental": false
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "__tests__",
    "**/*.test.ts",
    "**/*.spec.ts",
    "dist",
    "node_modules"
  ]
}
